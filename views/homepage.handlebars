<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
 <div class="my-3 p-3 bg-body rounded shadow-sm">
     <h3 class="d-flex mb-3 pb-2 border-bottom blog-title-container">
      <span><a href="/post/{{post.id}}"  class="blog-title">{{post.title}}</a></span>
      <span class="meta-data">Posted by {{post.user.username}} on {{format_date createdAt}}</span>
    </h3>
    <div class="d-flex pt-3">
        <p class="pb-3 mb-0 border-bottom">
          {{post.body_content}}
      </p>
    </div>
    <small class="d-block mt-3">
      <a href="/post/{{id}}">{{post.comments.length}} comments</a>
    </small>
  </div>
{{/each}}